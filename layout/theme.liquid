<!doctype html>
<html
  class="no-js{% if request.design_mode %} shopify-design-mode{% endif %}"
  lang="{{ request.locale.iso_code }}"
>
  <head>
    <!-- Google tag (gtag.js) -->
    <script defer src="https://www.googletagmanager.com/gtag/js?id=AW-17741514624"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'AW-17741514624');
    </script>
    {%- if settings.favicon != blank -%}
      <link
        rel="icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}"
      >
    {%- endif -%}

    {% comment %} This a way to wait for main content to load when navigating to a new page so that the view transitions can work consistently {% endcomment %}
    <link
      rel="expect"
      href="#MainContent"
      blocking="render"
      id="view-transition-render-blocker"
    >

    {%- render 'meta-tags' -%}
    {%- render 'stylesheets' -%}
    {%- render 'fonts' -%}
    {%- render 'scripts' -%}
    {%- render 'theme-styles-variables' -%}
    {%- render 'color-schemes' -%}

    {% if request.design_mode %}
      {%- render 'theme-editor' -%}
    {% endif %}

    {{ content_for_header }}
  </head>

  <body class="page-width-{{ settings.page_width }} card-hover-effect-{{ settings.card_hover_effect }}">
    {% render 'skip-to-content-link', href: '#MainContent', text: 'accessibility.skip_to_text' %}
    <div id="header-group">
      {% sections 'header-group' %}
    </div>

    <script
      src="{{ 'critical.js' | asset_url }}"
      type="module"
      defer
    ></script>

    <main
      id="MainContent"
      class="content-for-layout"
      role="main"
      data-page-transition-enabled="{{ settings.page_transition_enabled }}"
      data-product-transition="{{ settings.transition_to_main_product }}"
      data-template="{{ template }}"
    >
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    {% render 'search-modal' %}

    {% if settings.quick_add or settings.mobile_quick_add %}
      {% render 'quick-add-modal' %}
    {% endif %}

    {% if customer %}
      <script>
        window.Shopify = window.Shopify || {};
        window.Shopify.chat = window.Shopify.chat || {};
        window.Shopify.chat.customer = {
          email: {{ customer.email | json }},
          first_name: {{ customer.first_name | json }},
          last_name: {{ customer.last_name | json }}
        };
      </script>
    {% endif %}

    {% assign allow_tawk = customer and (template contains 'page.song-portal') %}
    {% unless allow_tawk %}
      <style>
        #tawkchat-container,
        #tawkchat-container iframe,
        #tawkchat-minified-wrapper,
        .tawk-min-container,
        .tawk-min-chat-icon,
        .tawk-button-circle {
          display: none !important;
          visibility: hidden !important;
          opacity: 0 !important;
        }
      </style>
    {% endunless %}
    {% section 'cookie-banner' %}
    
    {%- comment -%}
      Auto-redirect logged-in customers from ANY account page to song portal
    {%- endcomment -%}
    {% if customer %}
      <script>
        (function() {
          const currentPath = window.location.pathname;
          const songPortalPath = '/pages/your-song-portal';
          const isOnSongPortal = currentPath.includes('/your-song-portal');
          
          // Redirect from account, orders, or any customer page (except logout)
          const isAccountPage = currentPath.includes('/account') || 
                                currentPath.includes('/orders') ||
                                (currentPath === '/account') ||
                                currentPath.match(/\/customers?\//);
          
          if (isAccountPage && !isOnSongPortal && !currentPath.includes('/logout')) {
            console.log('Redirecting customer from', currentPath, 'to song portal');
            window.location.replace(songPortalPath);
          }
        })();
      </script>
    {% endif %}
  </body>
</html>
