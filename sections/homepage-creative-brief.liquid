<style>
  /* ===== Bespoke: Creative Brief Form (Dark Luxury) ===== */
  .bmx-creative-brief {
    --ink: #f5f5f5;
    --muted: #a0a0a0;
    --accent: #D4AF37;
    background: #1a1a1a;
    padding: 100px 20px;
    text-align: center;
    border-top: 1px solid rgba(212, 175, 55, 0.1);
    position: relative;
  }

  .bmx-creative-brief .wrap {
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .bmx-creative-brief h2 {
    font-family: "Playfair Display", Georgia, serif;
    font-size: 34px;
    color: var(--ink);
    margin-bottom: 16px;
    letter-spacing: 0.2px;
  }

  .bmx-creative-brief .divider {
    width: 96px;
    height: 3px;
    background: var(--accent);
    margin: 16px auto 24px;
    border-radius: 2px;
    box-shadow: 0 0 10px rgba(212, 175, 55, 0.3);
  }

  .bmx-creative-brief .description {
    color: var(--muted);
    font-size: 18px;
    margin-bottom: 40px;
    line-height: 1.75;
    max-width: 760px;
    margin-left: auto;
    margin-right: auto;
  }

  .bmx-creative-brief .form-container {
    background: #252525;
    border: 1px solid rgba(212, 175, 55, 0.2);
    border-radius: 18px;
    padding: 40px;
    box-shadow: 0 12px 28px rgba(0, 0, 0, 0.3);
    position: relative;
  }

  .bmx-creative-brief .form-container::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.5), transparent);
  }

  @media (max-width: 768px) {
    .bmx-creative-brief {
      padding: 60px 20px;
    }
    .bmx-creative-brief h2 { 
      font-size: 28px; 
    }
    .bmx-creative-brief .description { 
      font-size: 16px; 
      margin-bottom: 32px;
    }
    .bmx-creative-brief .form-container { 
      padding: 24px; 
    }
  }

  @media (max-width: 480px) {
    .bmx-creative-brief .form-container {
      padding: 16px;
    }
  }
</style>

<section id="creative-brief" class="bmx-creative-brief" aria-labelledby="bm-brief-title">
  <div class="wrap">
    <h2 id="bm-brief-title">Let's Create Your Bespoke Song</h2>
    <div class="divider"></div>
    <p class="description">This quick 2-minute form helps us understand your vision</p>
    
    <div class="form-container">
      <iframe 
        data-tally-src="https://tally.so/embed/OD1kzg?alignLeft=1&hideTitle=1&dynamicHeight=1" 
        loading="lazy" 
        width="100%" 
        height="800" 
        frameborder="0" 
        marginheight="0" 
        marginwidth="0" 
        title="Bespoke Melodies Creative Brief"
        style="border: none;">
      </iframe>
    </div>
  </div>
</section>

<script>
  (function(){
    var d=document,w="https://tally.so/widgets/embed.js",v=function(){
      if(typeof Tally!=="undefined"){
        Tally.loadEmbeds();
      } else {
        d.querySelectorAll("iframe[data-tally-src]:not([src])").forEach(function(e){
          e.src=e.dataset.tallySrc;
        });
      }
    };
    if(typeof Tally!=="undefined"){
      v();
    } else if(d.querySelector('script[src="'+w+'"]')==null){
      var s=d.createElement("script");
      s.src=w;
      s.onload=v;
      s.onerror=v;
      d.body.appendChild(s);
    }
  })();
</script>

{% schema %}
{
  "name": "Creative Brief Section",
  "settings": [],
  "presets": [
    {
      "name": "Creative Brief Section"
    }
  ]
}
{% endschema %}
