<style>
  .song-scroll-wrapper {
    width: 100%;
    padding: 60px 0;
    background: #f9f9f9 !important; /* Light background for contrast against dark sections */
    display: flex;
    justify-content: center;
    overflow: hidden;
  }

  .song-scroll-inner {
    display: flex;
    gap: 24px;
    padding: 20px;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth;
    max-width: 1200px;
    width: 100%;
    /* Hide scrollbar but keep functionality */
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none;  /* IE 10+ */
    justify-content: center; /* Center items if they don't overflow */
  }
  
  .song-scroll-inner::-webkit-scrollbar { 
    display: none;  /* Chrome/Safari */
  }

  .song-card {
    min-width: 260px;
    height: 320px;
    flex: 0 0 auto;
    border-radius: 24px;
    position: relative;
    overflow: hidden;
    transition: transform 0.4s cubic-bezier(0.25, 0.8, 0.25, 1), box-shadow 0.4s ease;
    cursor: pointer;
    background-size: cover;
    background-position: center;
    border: 1px solid rgba(0,0,0,0.05);
  }

  .song-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    z-index: 2;
  }

  /* Glassmorphism Overlay */
  .song-card-content {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0.6) 100%);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 24px;
    color: #fff;
  }

  .song-genre {
    font-family: "Playfair Display", serif;
    font-size: 1.5rem;
    margin-bottom: 16px;
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    font-weight: 500;
    color: #fff !important;
  }

  /* Premium Play Button */
  .song-play-btn {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    border: 1px solid rgba(255,255,255,0.3) !important;
    background: rgba(255,255,255,0.2) !important;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    color: #fff !important;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    align-self: flex-end;
    margin-top: auto;
  }

  .song-play-btn:hover {
    background: #D4AF37 !important;
    border-color: #D4AF37 !important;
    transform: scale(1.1);
    box-shadow: 0 0 20px rgba(212, 175, 55, 0.4);
  }
  
  .song-play-btn.playing {
    background: #D4AF37 !important;
    border-color: #D4AF37 !important;
    animation: pulse-gold 2s infinite;
  }

  @keyframes pulse-gold {
    0% { box-shadow: 0 0 0 0 rgba(212, 175, 55, 0.7); }
    70% { box-shadow: 0 0 0 15px rgba(212, 175, 55, 0); }
    100% { box-shadow: 0 0 0 0 rgba(212, 175, 55, 0); }
  }

  /* Play icon (triangle) */
  .song-play-icon {
    display: block;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 10px 0 10px 18px;
    border-color: transparent transparent transparent #ffffff;
    margin-left: 4px;
    transition: all 0.2s ease;
  }

  /* Pause icon when playing */
  .song-play-btn.playing .song-play-icon {
    width: 14px;
    height: 18px;
    border: none;
    border-left: 4px solid #fff;
    border-right: 4px solid #fff;
    margin-left: 0;
    background: transparent;
  }

  /* Gradients for cards (simulating album art) */
  .genre-pop-romance { background-image: linear-gradient(135deg, #ff9a9e 0%, #fecfef 99%, #fecfef 100%); }
  .genre-adult-contemporary { background-image: linear-gradient(120deg, #a1c4fd 0%, #c2e9fb 100%); }
  .genre-power-ballad { background-image: linear-gradient(to top, #cfd9df 0%, #e2ebf0 100%); }
  .genre-progressive-funk { background-image: linear-gradient(to right, #43e97b 0%, #38f9d7 100%); }
  .genre-country { background-image: linear-gradient(to top, #c79081 0%, #dfa579 100%); }
  .genre-dance-pop { background-image: linear-gradient(to top, #cc208e 0%, #6713d2 100%); }

  .song-audio { display: none; }
  
  @media (max-width: 768px) {
    .song-scroll-inner {
      justify-content: flex-start; /* Allow scrolling on mobile */
      padding-left: 24px;
    }
    .song-card {
      min-width: 220px;
      height: 280px;
    }
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    var currentAudio = null;
    var currentButton = null;

    cards.forEach(function (card) {
      var audio = card.querySelector('.song-audio');
      var button = card.querySelector('.song-play-btn');

      button.addEventListener('click', function () {
        // Stop any other track
        if (currentAudio && currentAudio !== audio) {
          currentAudio.pause();
          currentAudio.currentTime = 0;
          if (currentButton) {
            currentButton.classList.remove('playing');
          }
        }

        if (audio.paused) {
          audio.play();
          button.classList.add('playing');
          currentAudio = audio;
          currentButton = button;
        } else {
          audio.pause();
          audio.currentTime = 0;
          button.classList.remove('playing');
          currentAudio = null;
          currentButton = null;
        }
      });

      // If audio ends naturally, reset button state
      audio.addEventListener('ended', function () {
        button.classList.remove('playing');
        if (currentAudio === audio) {
          currentAudio = null;
          currentButton = null;
        }
      });
    });
  });
</script>
