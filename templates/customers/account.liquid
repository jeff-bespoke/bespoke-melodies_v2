{% liquid
  assign client_portal_url = settings.client_portal_url | default: '/pages/your-song-portal'
  assign client_portal_label = settings.client_portal_label | default: 'Your Song Portal'
%}

{% paginate customer.orders by 20 %}
  <div class="page-width account-page">
    <header class="account-page__header">
      <div>
        <h1 class="h2">{{ 'customer.account.title' | t }}</h1>
        <p class="account-page__email">{{ customer.email }}</p>
      </div>
      <div class="account-page__actions">
        {% if client_portal_url != blank %}
          <a class="button" href="{{ client_portal_url }}">{{ client_portal_label | escape }}</a>
        {% endif %}
        <a class="button-secondary" href="{{ routes.account_addresses_url }}">
          {{ 'customer.account.view_addresses' | t: count: customer.addresses_count }}
        </a>
        <a class="button-secondary" href="{{ routes.account_logout_url }}">{{ 'customer.log_out' | t }}</a>
      </div>
    </header>

    <section class="account-page__section">
      <h2 class="h4">{{ 'customer.orders.title' | t }}</h2>
      {% if customer.orders_count == 0 %}
        <p>{{ 'customer.orders.none' | t }}</p>
      {% else %}
        <table class="account-page__orders-table">
          <thead>
            <tr>
              <th scope="col">{{ 'customer.orders.order_number' | t }}</th>
              <th scope="col">{{ 'customer.orders.date' | t }}</th>
              <th scope="col">{{ 'customer.orders.payment_status' | t }}</th>
              <th scope="col">{{ 'customer.orders.fulfillment_status' | t }}</th>
              <th scope="col">{{ 'customer.orders.total' | t }}</th>
            </tr>
          </thead>
          <tbody>
            {% for order in customer.orders %}
              <tr>
                <td data-label="{{ 'customer.orders.order_number' | t }}">
                  <a href="{{ order.customer_url }}" aria-label="{{ 'customer.orders.order_number_link' | t: number: order.name }}">{{ order.name }}</a>
                </td>
                <td data-label="{{ 'customer.orders.date' | t }}">{{ order.created_at | date: format: 'date' }}</td>
                <td data-label="{{ 'customer.orders.payment_status' | t }}">{{ order.financial_status_label }}</td>
                <td data-label="{{ 'customer.orders.fulfillment_status' | t }}">{{ order.fulfillment_status_label }}</td>
                <td data-label="{{ 'customer.orders.total' | t }}">{{ order.total_price | money }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
        {{ paginate | default_pagination }}
      {% endif %}
    </section>
  </div>
{% endpaginate %}
