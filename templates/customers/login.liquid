<!-- /templates/customers/login.liquid -->
{% comment %}
  Custom login page with automatic redirect to song portal after successful login
{% endcomment %}

<div class="customer login">
  <div class="container">
    <h1>Customer Login</h1>
    
    {%- form 'customer_login', novalidate: 'novalidate' -%}
      {%- comment -%}
        Redirect to song portal after successful login
      {%- endcomment -%}
      <input type="hidden" name="return_to" value="/pages/your-song-portal">
      
      {% if form.errors %}
        <div class="form__message errors" tabindex="-1" autofocus>
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <div class="field">
        <label for="CustomerEmail">
          Email
        </label>
        <input
          type="email"
          name="customer[email]"
          id="CustomerEmail"
          autocomplete="email"
          autocapitalize="off"
          placeholder="Email"
          {% if form.errors %}
            aria-invalid="true"
            aria-describedby="CustomerEmail-error"
          {% endif %}
        >
      </div>

      <div class="field">
        <label for="CustomerPassword">
          Password
        </label>
        <input
          type="password"
          value=""
          name="customer[password]"
          id="CustomerPassword"
          autocomplete="current-password"
          placeholder="Password"
          {% if form.errors %}
            aria-invalid="true"
            aria-describedby="CustomerPassword-error"
          {% endif %}
        >
      </div>

      <div class="login__actions">
        <button type="submit" class="button">
          Sign In
        </button>
        
        <a href="{{ routes.account_recover_url }}">
          Forgot your password?
        </a>
      </div>
    {%- endform -%}

    {% if shop.checkout.guest_login %}
      <hr>
      <div class="guest-login">
        <h2>New Customer?</h2>
        {%- form 'guest_login' -%}
          <button type="submit" class="button button--secondary">
            Continue as Guest
          </button>
        {%- endform -%}
      </div>
    {% endif %}

    <div class="create-account">
      <a href="{{ routes.account_register_url }}" class="button button--secondary">
        Create Account
      </a>
    </div>
  </div>
</div>

<style>
  .customer.login {
    max-width: 500px;
    margin: 60px auto;
    padding: 20px;
  }
  
  .customer.login h1 {
    margin-bottom: 30px;
    text-align: center;
  }
  
  .field {
    margin-bottom: 20px;
  }
  
  .field input {
    width: 100%;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
  }
  
  .field label {
    display: block;
    margin-bottom: 5px;
    font-weight: 500;
  }
  
  .login__actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20px;
  }
  
  .button {
    padding: 12px 24px;
    background: #D4AF37;
    color: #1a1a1a;
    border: none;
    border-radius: 4px;
    font-weight: bold;
    cursor: pointer;
  }
  
  .button:hover {
    background: #C5A028;
  }
  
  .button--secondary {
    background: transparent;
    border: 2px solid #D4AF37;
    color: #D4AF37;
  }
  
  .create-account {
    margin-top: 30px;
    text-align: center;
  }
  
  hr {
    margin: 30px 0;
    border: none;
    border-top: 1px solid #ddd;
  }
  
  .guest-login {
    text-align: center;
  }
  
  .form__message.errors {
    background: #fff3cd;
    color: #856404;
    padding: 12px;
    border-radius: 4px;
    margin-bottom: 20px;
  }
</style>
